{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend (npm)",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "isBackground": true
    },
    {
      "label": "Start Backend (Flask)",
      "type": "shell",
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"$env:FLASK_APP='app.py'; $env:FLASK_ENV='development'; flask run --host=0.0.0.0 --port=5000\"",
      "options": { "cwd": "${workspaceFolder}/backend" },
      "isBackground": true
    }
  ]
}